{
    // Stored in $HOME/.config/Code/User/settings.json

    "editor.fontFamily": "InputMono Medium",
    "editor.renderWhitespace": "boundary",
    "editor.cursorStyle": "block",
    "editor.minimap.enabled": false,
    "editor.renderControlCharacters": false,
    "telemetry.enableTelemetry": false,
    "telemetry.enableCrashReporter": false,
    // Vim mode stuff
    "vim.leader": "\\",
    "vim.insertModeKeyBindings": [
        {
            "before": ["j", "j"],
            "after": ["<Esc>"]
        }
    ],
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": ["j"],
            "after": ["g", "j"]
        },
        {
            "before": ["k"],
            "after": ["g", "k"]
        },
        {
            "before": ["<leader>", "q"],
            "commands": [":nohl"]
        },
        {
            "before": ["g", "d"],
            "commands": ["editor.action.peekDefinition"]
        }

    ],
    // ctrl-p in a terminal should use the readline binding
    // (i.e. "up"/previous line), not VSCode's "open recent"
    "terminal.integrated.commandsToSkipShell": [
        "-workbench.action.quickOpen"
    ],
    "vim.useCtrlKeys": true,
    "vim.hlsearch": true,
    "vim.cursorStylePerMode.insert": "line",
    "workbench.list.openMode": "doubleClick",
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "window.zoomLevel": 0,
    "C_Cpp.default.cppStandard": "c++17",
    "C_Cpp.default.intelliSenseMode": "gcc-x64",
    "editor.cursorSurroundingLines": 3,
    "editor.autoClosingBrackets": "never",
    "editor.autoClosingQuotes": "never",
    "files.autoSave": "afterDelay",
    "erlang_ls.logLevel": "info",
    "editor.fontSize": 13,
    "editor.copyWithSyntaxHighlighting": false,
    "gitlens.statusBar.enabled": false,
    "editor.wordWrap": "on",
    "extensions.ignoreRecommendations": false,
    "plantuml.commandArgs": [
    
    ],
    "plantuml.server": "plantuml.gambit:80",
    "plantuml.render": "PlantUMLServer",
    "latex-workshop.view.pdf.viewer": "tab",
    "rust-analyzer.callInfo.full": false,
    "python.showStartPage": false,
    "workbench.colorTheme": "Gruvbox Dark Medium",
    "remote.autoForwardPorts": false,
    "python.languageServer": "Pylance",
    "rust-analyzer.diagnostics.enableExperimental": false,
    "rust-analyzer.cargo.loadOutDirsFromCheck": true,
    "rust-analyzer.procMacro.enable": true

}
