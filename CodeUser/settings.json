{
    // Stored in $HOME/.config/Code/User/settings.json

    "editor.fontFamily": "InputMono Medium",
    "editor.renderWhitespace": "boundary",
    "editor.cursorStyle": "block",
    "workbench.colorTheme": "Gruvbox Dark Soft",
    "editor.minimap.enabled": false,
    "editor.renderControlCharacters": true,
    "editor.copyWithSyntaxHighlighting": false,
    "extensions.ignoreRecommendations": true,
    "telemetry.telemetryLevel": "off",
    "erlang.codeLensEnabled": true,
    // Vim mode stuff
    "vim.leader": "\\",
    "vim.insertModeKeyBindings": [
        {
            "before": ["j", "j"],
            "after": ["<Esc>"]
        }
    ],
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": ["j"],
            "after": ["g", "j"]
        },
        {
            "before": ["k"],
            "after": ["g", "k"]
        },
        {
            "before": ["<leader>", "q"],
            "commands": [":nohl"]
        },
        {
            "before": ["g", "d"],
            "commands": ["editor.action.peekDefinition"]
        }

    ],
    // ctrl-p in a terminal should use the readline binding
    // (i.e. "up"/previous line), not VSCode's "open recent"
    "terminal.integrated.commandsToSkipShell": [
        "-workbench.action.quickOpen"
    ],
    "vim.useCtrlKeys": true,
    "vim.hlsearch": true,
    "vim.cursorStylePerMode.insert": "line",
    "workbench.list.openMode": "doubleClick",
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "editor.cursorSurroundingLines": 3,
    "editor.autoClosingBrackets": "never",
    "editor.autoClosingQuotes": "never",
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter-notebook"
    },
    "files.autoSave": "afterDelay",
    "notebook.cellToolbarLocation": {
        "default": "right",
        "jupyter-notebook": "left"
    },
    "editor.wordWrap": "on",
    "editor.bracketPairColorization.enabled": true,
    "errorLens.addAnnotationTextPrefixes": false,
    "errorLens.enabledDiagnosticLevels": [
        "error",
        "warning",
        "info",
        // "hint"
    ],
    "workbench.colorCustomizations": {
        "[Gruvbox Dark Soft]": {
            "editorInlayHint.foreground": "#ebdbb2",
            "editorInlayHint.background": "#643b29"

        },
    },
    "rust-analyzer.inlayHints.typeHints.enable": false,
    "extensions.experimental.affinity": {
        "asvetliakov.vscode-neovim": 1
    },
}